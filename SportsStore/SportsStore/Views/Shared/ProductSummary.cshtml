<div class="card card-group m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary m-1" style="float:right">
                <small>@(Model.Price > 0 ? Model.Price.ToString("c") : "free") </small>
            </span>
        </h4>
        <div class="card-text p-1">@Model.Description</div>
    </div>
</div>